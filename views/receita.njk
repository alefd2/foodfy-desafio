{%extends 'layout.njk' %}


{%block title%}
    <title>Foodfy</title>
    <link rel="stylesheet" href="styles/index.css">
    <link rel="stylesheet" href="styles/recipe.css">
{%endblock%}

    {% block content%}
    <main>
        <section class="recipe">
            <div id="img">
                <img src="{{item.image}}" alt="">
                <h3>{{item.title}}</h3>
                <p>{{item.author}}</p>
            </div>
            
            <div id="ingredientes">
                <div class="subtitle">
                    <h1>Ingredientes</h1>   <button class="esconder">ESCONDER</button>
                </div>
                <ul class='hide-ingredientes'>
                    {%for ingredient in item.ingredients%} 
                    <li>{{ingredient}}</li> 
                    {%endfor%} 
                </ul>
            </div>
            <div id="prepare">
                <div class="subtitle">
                    <h1>Modo de preparo</h1> <button class="mostrar">ESCONDER</button>
                </div>           
                <p class='hide-prepare display'>{{item.preparation}}</p>
            </div>
            <div id="information">
                <div class="subtitle">
                    <h1>Informações adicionais</h1><button class="esconder-information">ESCONDER</button>
                </div>
                <p class='hide-information '>{{item.information}}</p>
            </div>
        </section>
    </main>

    <script src="/script.js"></script>
    {%endblock%}

    
